#!/bin/sh

# Script to install ReaClassical on MacOS
# Works for all architectures and OS versions that are compatible with REAPER

# Copyright (C) 2022–2025 chmaha

rcver="26~beta1"

cleanup() {
    if [ -n "$temp_dir" ] && [ -d "$temp_dir" ]; then
        rm -rf "$temp_dir"
    fi
}

check_internet() {
    if ! ping -c 1 -W 5000 8.8.8.8 >/dev/null 2>&1; then
        printf "\nError: The ReaClassical installer requires an internet connection.\n"
        printf "Enable the connection if possible or transfer the portable install from an online machine.\n"
        printf "Exiting...\n\n"
        exit 1
    fi
}

# Trap exit signals to ensure cleanup
trap cleanup EXIT

check_internet

ver_txt="https://raw.githubusercontent.com/chmaha/ReaClassical/main/tested_reaper_ver.txt"
ver=$(curl -sS "$ver_txt" | awk '/====/{getline; print}')

arch=$(uname -m)
osver=$(sw_vers -productVersion)
major=$(echo "$osver" | cut -d. -f1)
minor=$(echo "$osver" | cut -d. -f2)
dmgtype="universal"

printf "Welcome to the ReaClassical installer...\n\n"
sleep 2

default_install="$HOME/Desktop"

install_dir=$(osascript <<EOF
tell application "System Events"
    activate
    try
        set chosenFolder to choose folder ¬
            with prompt "Select the installation folder for ReaClassical:" ¬
            default location (POSIX file "$default_install")
        return POSIX path of chosenFolder
    on error number -128
        return ""
    end try
end tell
EOF
)

# User cancelled
if [ -z "$install_dir" ]; then
    echo "Installation cancelled."
    exit 1
fi

# Ensure directory exists
mkdir -p "$install_dir" || {
    echo "Failed to create installation directory: $install_dir"
    exit 1
}

printf "Selected installation folder: %s\n\n" "$install_dir"

rcfolder="${install_dir}/ReaClassical_${rcver}"

printf "Versions: REAPER %s (%s), ReaClassical %s\n\n" "$ver" "$arch" "$rcver"
sleep 2


# ==========================================================

if [ "$arch" = "i386" ]; then
    dmgtype="i386"
    echo "Using i386 dmg file..."
elif [ "$major" -lt 10 ] || ([ "$major" -eq 10 ] && [ "$minor" -lt 15 ]); then
    dmgtype="x86_64"
    echo "Using x86_64 dmg file..."
else
    echo "Using universal dmg file..."
fi

date_suffix=$(date +%s | shasum -a 256 | cut -c1-5)

# Create temporary directory
temp_dir=$(mktemp -d 2>/dev/null)
if [ -z "$temp_dir" ]; then
    temp_dir="/tmp/ReaClassical_${date_suffix}"
    mkdir -p "$temp_dir"
fi

echo "Downloading REAPER $ver from reaper.fm"
sleep 2
reaper_url="https://reaper.fm/files/${ver%%.*}.x/reaper${ver//.}_$dmgtype.dmg"
curl -L -o "$temp_dir/reaper.dmg" "$reaper_url"

echo "Converting and mounting DMG..."
sleep 2
hdiutil convert -quiet "$temp_dir/reaper.dmg" -format UDTO -o "$temp_dir/reaper_temp"
hdiutil attach -quiet -nobrowse -noverify -noautoopen -mountpoint "$temp_dir/reaper_temp" "$temp_dir/reaper_temp.cdr"

echo "Downloading ReaClassical resource folder base and userplugins..."
sleep 2
res_output="$temp_dir/Resource_Folder_Base.zip"
res_url="https://github.com/chmaha/ReaClassical/raw/main/Installers/Resource_Folder_Base.zip"
curl -L -o "$res_output" "$res_url"

up_output="$temp_dir/UP_MacOS-$arch.zip"
up_url="https://github.com/chmaha/ReaClassical/raw/main/Installers/UserPlugins/UP_MacOS-$arch.zip"
curl -L -o "$up_output" "$up_url"

# Check for existing folder
if [ -d "$rcfolder" ]; then
    rcfolder="${rcfolder}_${date_suffix}"
    sleep 2
    echo "Folder already exists. Adding unique suffix."
fi

echo "Extracting files into $rcfolder..."
sleep 2
unzip -q "$res_output" -d "$rcfolder/"
unzip -q "$up_output" -d "$rcfolder/UserPlugins/"

echo "Adding splash screen and theme references..."
sleep 2
abspath=$(cd "$rcfolder" && pwd)

sed -i '' -e "/^\[REAPER\]/a\\
lastthemefn5=${abspath}\/ColorThemes\/ReaClassical.ReaperTheme" "$rcfolder/reaper.ini"

sed -i '' -e "/^\[REAPER\]/a\\
splashimage=${abspath}\/Scripts\/chmaha Scripts\/ReaClassical\/reaclassical-splash.png" "$rcfolder/reaper.ini"

echo "Copying REAPER.app into ReaClassical folder..."
sleep 2
cp -R "$temp_dir/reaper_temp/REAPER.app" "$rcfolder/"

echo "Unmounting image and cleaning up..."
sleep 2
hdiutil detach "$temp_dir/reaper_temp"

echo "Portable ReaClassical installation complete!"

cleanup
